<h1>Here are your tasks pal!</h1>

<div id="errors"></div>

<%= form_for @task do |form| %>
  <%= render "error_messages", target: @task %>
<div>
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>

<div>
  <%= form.label :description %>
  <%= form.text_field :description %>
</div>

<div>
  <%= form.submit "Create Task" %>
</div>

<% end %>

<h2 id="incomplete-header" data-list-id="incomplete-task-list">Incomplete Tasks</h2>
<ul id="incomplete-task-list"><%= render @incomplete_tasks %>
</ul>

<h2 id="complete-header" data-list-id="complete-task-list">Completed Tasks</h2>
<ul id="complete-task-list"><%= render @complete_tasks %>
</ul>
